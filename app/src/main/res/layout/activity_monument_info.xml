<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nerisa.thesis.activity.MonumentInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter" />

    <!--<ImageView-->
        <!--android:id="@+id/image"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="10dp" />-->

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="Hello"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/header" />


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:drawableLeft="@drawable/ic_location"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/colorSubtitle"
        android:textSize="@dimen/subtitle"
        />

    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorSubtitle"
        android:textSize="@dimen/subtitle"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/desc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:text="@string/desc_title"
        android:textSize="@dimen/header2"
        android:textColor="@color/colorTitle"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/content"
        android:textColor="@color/colorTitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_posts"
            android:theme="@style/PrimaryFlatButton"
            android:onClick="showPosts"
            android:layout_weight="1"
            android:layout_gravity="bottom|center"
            android:textColor="@color/colorTitle"
            android:background="@color/cardBackground"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_warnings"
            android:theme="@style/PrimaryFlatButton"
            android:onClick="showWarnings"
            android:layout_weight="1"
            android:layout_gravity="bottom|center"
            android:textColor="@color/colorTitle"
            android:background="@color/cardBackground"
            android:layout_margin="5dp"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
